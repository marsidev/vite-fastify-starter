{
  "private": true,
  "author": {
    "name": "Luis Marsiglia",
    "email": "marsiglia.business@gmail.com"
  },
  "name": "vite-fastify-starter",
  "description": "This is a React fullstack starter project which uses Vite and Fastify as the client and server respectively. Also uses pnpm as package manager.",
  "version": "1.0.0",
  "repository": "git@github.com:marsidev/vite-fastify-starter.git",
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter ./packages/client build",
    "start": "pnpm --filter ./packages/server start",
    "dev": "pnpm run -r --workspace-concurrency 2 --filter ./packages/server --filter ./packages/client dev",
    "start-all": "pnpm build && pnpm start",
    "heroku": "git push heroku main",
    "heroku-prebuild": "npm install -g pnpm && pnpm install",
    "lint": "eslint . --ext .js --ext .jsx --ext .ts --ext .tsx",
    "lint-fix": "eslint . --ext .js --ext .jsx --ext .ts --ext .tsx --fix"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.15.0",
    "eslint-config-xo": "^0.41.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0"
  },
  "packageManager": "pnpm@7.0.0",
  "pnpm": {
    "overrides": {
      "client": "workspace:*",
      "server": "workspace:*"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  },
  "engines": {
    "node": "14.x"
  },
  "keywords": [
    "fastify",
    "vite",
    "vite-fastify",
    "vite-react",
    "react",
    "chakra-ui",
    "template"
  ]
}
