{
  "private": true,
  "author": {
    "name": "Luis Marsiglia",
    "email": "marsiglia.business@gmail.com"
  },
  "name": "vite-fastify-starter",
  "description": "This is a React fullstack starter project which uses Vite and Fastify as the client and server respectively. Also uses pnpm as package manager.",
  "version": "1.0.0",
  "repository": "git@github.com:marsidev/vite-fastify-starter.git",
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter client build",
    "start": "pnpm --filter server start",
    "dev": "pnpm run --parallel --filter server --filter client dev",
    "dev-server": "pnpm --filter server dev",
    "dev-client": "pnpm --filter client dev",
    "dev-client-https": "pnpm --filter client dev-https",
    "start-all": "pnpm build && pnpm start",
    "lint": "pnpm run --parallel lint",
    "lint-fix": "pnpm run --parallel lint-fix",
    "tsc": "pnpm run --parallel tsc",
    "heroku": "git push heroku HEAD:main",
    "up-all": "pnpm -r up",
    "prebuild": "npx -y only-allow pnpm"
  },
  "devDependencies": {
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.16.0",
    "eslint-config-xo": "^0.41.0",
    "rimraf": "^3.0.2",
    "tslib": "^2.4.0",
    "typescript": "4.6.4"
  },
  "packageManager": "pnpm@7.1.6",
  "pnpm": {
    "overrides": {
      "client": "workspace:*",
      "server": "workspace:*",
      "shared": "workspace:*"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  },
  "engines": {
    "node": "16.x",
    "pnpm": "7.x"
  },
  "keywords": [
    "fastify",
    "vite",
    "vite-fastify",
    "vite-react",
    "react",
    "chakra-ui",
    "template",
    "typescript"
  ]
}
