{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist/**/*"],
  "moduleResolution": ["node_modules", "node"]
}